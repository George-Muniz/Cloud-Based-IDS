variable "project_id" {
  description = "GCP project ID"
  type        = string
}

variable "region" {
  description = "GCP region"
  type        = string
  default     = "us-central1"
}

variable "zone" {
  description = "GCP zone"
  type        = string
  default     = "us-central1-a"
}

variable "log_bucket" {
  description = "GCS bucket for IDS logs"
  type        = string
  default     = "ids-logs-george-thomas"
}
